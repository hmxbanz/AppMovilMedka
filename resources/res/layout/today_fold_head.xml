<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/rl_today_fold" android:background="@drawable/sport_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="60dp" android:layout_centerInParent="true">
        <RelativeLayout android:layout_width="160dp" android:layout_height="160dp" android:layout_centerInParent="true">
            <TextView android:textSize="50dp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_steps" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_centerInParent="true"/>
            <TextView android:textSize="@dimen/text_size_2" android:textColor="@color/white" android:gravity="center" android:layout_width="120dp" android:layout_height="wrap_content" android:text="@string/today_steps" android:layout_below="@+id/tv_steps" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <com.yc.pedometer.customview.SportsRingView android:layout_gravity="center_horizontal" android:id="@+id/circle_main_sports" android:layout_width="160dp" android:layout_height="160dp" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/paddingtopmin" android:layout_centerHorizontal="true">
        <RelativeLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textSize="16sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/train_goal"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/tv_distance_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/home_Distance"/>
            <TextView android:textSize="12sp" android:textColor="@color/white" android:id="@+id/tv_distance_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/kilometers" android:layout_alignBaseline="@+id/tv_distance_desc" android:layout_marginStart="5dp" android:layout_toEndOf="@+id/tv_distance_desc"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/tv_calories_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/home_Heat"/>
            <TextView android:textSize="12sp" android:textColor="@color/white" android:id="@+id/tv_calories_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/kilocalorie" android:layout_alignBaseline="@+id/tv_calories_desc" android:layout_marginStart="5dp" android:layout_toEndOf="@+id/tv_calories_desc"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/paddingtopmin" android:layout_centerHorizontal="true">
        <TextView android:textSize="30sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_goals" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView android:textSize="30sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_distance" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView android:textSize="30sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_calories" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
