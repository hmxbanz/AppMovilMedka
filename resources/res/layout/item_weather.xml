<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="50dp" android:maxHeight="?android:attr/listPreferredItemHeight">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textColor="@color/text_gray" android:gravity="center_vertical" android:id="@+id/week" android:layout_width="match_parent" android:layout_height="50dp" android:text="今天" android:layout_weight="1" android:layout_marginStart="20dp"/>
        <TextView android:textColor="@color/text_gray" android:gravity="center" android:id="@+id/description" android:layout_width="match_parent" android:layout_height="50dp" android:text="多云转晴" android:layout_weight="1"/>
        <TextView android:textColor="@color/text_gray" android:gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/temperature_range" android:layout_width="match_parent" android:layout_height="50dp" android:text="15°~20°" android:layout_weight="1" android:layout_marginEnd="20dp"/>
    </LinearLayout>
    <View android:id="@+id/divider_line" android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true"/>
</RelativeLayout>
