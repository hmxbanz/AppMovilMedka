                    <TextView android:textSize="@dimen/big" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/vicinity"/>
                    <TextView android:textSize="@dimen/small" android:textColor="@color/gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/padding10" android:text="@string/vicinity_content" android:layout_marginStart="@dimen/padding10" android:layout_marginEnd="@dimen/padding10"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/round_item_style">
                    <TextView android:textSize="@dimen/big" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/battery_exhausted"/>
                    <TextView android:textSize="@dimen/small" android:textColor="@color/gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/padding10" android:text="@string/battery_content" android:layout_marginStart="@dimen/padding10" android:layout_marginEnd="@dimen/padding10"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/round_item_style">
                    <TextView android:textSize="@dimen/big" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/restart_bluetooth"/>
                    <TextView android:textSize="@dimen/small" android:textColor="@color/gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/padding10" android:text="@string/restart_bluetooth_content" android:layout_marginStart="@dimen/padding10" android:layout_marginEnd="@dimen/padding10"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/round_item_style">
                    <TextView android:textSize="@dimen/big" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/have_connected_other"/>
                    <TextView android:textSize="@dimen/small" android:textColor="@color/gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/padding10" android:text="@string/have_connected_other_content" android:layout_marginStart="@dimen/padding10" android:layout_marginEnd="@dimen/padding10"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/round_item_style">
                    <TextView android:textSize="@dimen/big" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/restart_phone"/>
                    <TextView android:textSize="@dimen/small" android:textColor="@color/gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/padding10" android:text="@string/restart_phone_content" android:layout_marginStart="@dimen/padding10" android:layout_marginEnd="@dimen/padding10"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/round_item_style">
                    <TextView android:textSize="@dimen/big" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/open_gps"/>
                    <TextView android:textSize="@dimen/small" android:textColor="@color/gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/padding10" android:text="@string/ble_scan_android6" android:layout_marginStart="@dimen/padding10" android:layout_marginEnd="@dimen/padding10"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</RelativeLayout>
