<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center" android:orientation="vertical" android:background="#00000000" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/share_above" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="40dp">
            <TextView android:textSize="20dp" android:textColor="#000000" android:gravity="center" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/YC_Dolen_update_warn" android:layout_marginStart="10dp"/>
        </LinearLayout>
        <TextView android:textSize="18dp" android:textColor="#000000" android:gravity="center" android:id="@+id/update_warn_tv" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/YC_Dolen_find_new_version"/>
        <View android:background="#cedded" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_marginTop="5dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="40dp">
            <Button android:textColor="@color/black" android:layout_gravity="center_vertical" android:id="@+id/btn_no" android:background="@drawable/update_button_drawable" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="1dp" android:text="@string/no" android:layout_weight="1" android:textAllCaps="false"/>
            <View android:gravity="center_horizontal" android:id="@+id/view_buttom" android:background="#cedded" android:layout_width="@dimen/line_height" android:layout_height="match_parent"/>
            <Button android:textColor="@color/black" android:layout_gravity="center_vertical" android:id="@+id/btn_yes" android:background="@drawable/update_button_drawable" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="1dp" android:text="@string/yes" android:layout_weight="1" android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
