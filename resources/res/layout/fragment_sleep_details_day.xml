<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_calendar" android:background="@color/sleep_bg_color" android:layout_width="match_parent" android:layout_height="40dp">
        <TextView android:textSize="@dimen/tittle_text_size_1" android:textColor="@color/white" android:id="@+id/tv_calendar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2019/07/11" android:layout_centerInParent="true"/>
        <ImageView android:id="@+id/calendar_back" android:paddingTop="@dimen/padding" android:paddingBottom="@dimen/padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/calendar_back_sleep_selector" android:layout_centerVertical="true" android:paddingStart="@dimen/value20" android:paddingEnd="@dimen/value20" android:layout_toStartOf="@+id/tv_calendar"/>
        <ImageView android:id="@+id/calendar_ahead" android:paddingTop="@dimen/padding" android:paddingBottom="@dimen/padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/calendar_ahead_sleep_selector" android:layout_centerVertical="true" android:paddingStart="@dimen/value20" android:paddingEnd="@dimen/value20" android:layout_toEndOf="@+id/tv_calendar"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/rl_calendar" android:overScrollMode="never">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:background="@color/sleep_bg_color" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="16dp" android:paddingEnd="16dp">
                <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/ll_sleep_detail" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="16dp" android:paddingEnd="16dp">
                    <TextView android:textSize="@dimen/small_value" android:textColor="@color/white" android:gravity="center" android:id="@+id/sleep_status" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
                    <TextView android:textSize="@dimen/small_value" android:textColor="@color/white" android:gravity="center" android:id="@+id/sleep_begin_time" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
                    <TextView android:textSize="@dimen/small_value" android:textColor="@color/white" android:gravity="center" android:id="@+id/sleep_end_time" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
                </LinearLayout>
                <com.yc.pedometer.customview.DaySleepPanelBar2 android:layout_gravity="center" android:id="@+id/yc_sleep_panel_bar" android:layout_width="match_parent" android:layout_height="200dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1.2" android:paddingStart="16dp" android:paddingEnd="16dp">
                <TextView android:textColor="@color/black" android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/start_sleep_time" android:layout_weight="1"/>
                <TextView android:textColor="@color/black" android:gravity="center" android:id="@+id/start_sleep_time" android:layout_width="match_parent" android:layout_height="match_parent" android:text="00:00" android:layout_weight="1"/>
                <TextView android:textColor="@color/black" android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/get_up_time" android:layout_weight="1"/>
                <TextView android:textColor="@color/black" android:gravity="center" android:id="@+id/stop_sleep_time" android:layout_width="match_parent" android:layout_height="match_parent" android:text="00:00" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="60dp" android:layout_weight="1" android:paddingStart="16dp" android:paddingEnd="16dp">
                    <RelativeLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                        <TextView android:textSize="32dp" android:textColor="@color/text_black" android:gravity="center" android:id="@+id/total_sleep_hour" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"/>
                        <TextView android:textSize="@dimen/text_size_2" android:textColor="@color/alarm_text_add" android:gravity="center" android:id="@+id/total_sleep_hour_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/hour" android:layout_alignBaseline="@+id/total_sleep_hour" android:layout_marginStart="@dimen/value_padding_unit" android:layout_toEndOf="@+id/total_sleep_hour"/>
                        <TextView android:textSize="32dp" android:textColor="@color/text_black" android:gravity="center" android:id="@+id/total_sleep_minute" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_marginStart="@dimen/value_padding_unit" android:layout_toEndOf="@+id/total_sleep_hour_unit"/>
                        <TextView android:textSize="@dimen/text_size_2" android:textColor="@color/alarm_text_add" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/minute" android:layout_alignBaseline="@+id/total_sleep_minute" android:layout_marginStart="@dimen/value_padding_unit" android:layout_toEndOf="@+id/total_sleep_minute"/>
                    </RelativeLayout>
                </LinearLayout>
                <com.yc.pedometer.customview.SleepStatusHorizontalBar android:id="@+id/mSleepStatusHorizontalBar" android:layout_width="match_parent" android:layout_height="@dimen/value20"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="60dp" android:layout_weight="1" android:paddingStart="16dp" android:paddingEnd="16dp">
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                        <RelativeLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                            <TextView android:textSize="24dp" android:textColor="@color/text_black" android:id="@+id/deep_sleep_hour" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"/>
                            <TextView android:textSize="@dimen/text_size_2" android:textColor="@color/alarm_text_add" android:gravity="center" android:id="@+id/deep_hour_nuit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/hour" android:layout_alignBaseline="@+id/deep_sleep_hour" android:layout_marginStart="@dimen/value_padding_unit" android:layout_toEndOf="@+id/deep_sleep_hour"/>
                            <TextView android:textSize="24dp" android:textColor="@color/text_black" android:gravity="center" android:id="@+id/deep_sleep_minute" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_marginStart="@dimen/value_padding_unit" android:layout_toEndOf="@+id/deep_hour_nuit"/>
                            <TextView android:textSize="@dimen/text_size_2" android:textColor="@color/alarm_text_add" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/minute" android:layout_alignBaseline="@+id/deep_sleep_minute" android:layout_marginStart="@dimen/value_padding_unit" android:layout_toEndOf="@+id/deep_sleep_minute"/>
                        </RelativeLayout>
                        <RelativeLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="1">
                            <ImageView android:id="@+id/deep_status_color" android:background="@color/sleep_deep" android:layout_width="@dimen/padding10" android:layout_height="@dimen/padding10" android:layout_centerVertical="true"/>
                            <TextView android:textSize="@dimen/sleep_text_size_big" android:textColor="@color/alarm_text_add" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sleep_deep" android:layout_weight="1" android:layout_centerVertical="true" android:layout_marginStart="@dimen/padding" android:layout_toEndOf="@+id/deep_status_color"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                        <RelativeLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                            <TextView android:textSize="24dp" android:textColor="@color/text_black" android:id="@+id/light_sleep_hour" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"/>
                            <TextView android:textSize="@dimen/text_size_2" android:textColor="@color/alarm_text_add" android:gravity="center" android:id="@+id/light_hour_nuit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/hour" android:layout_alignBaseline="@+id/light_sleep_hour" android:layout_marginStart="@dimen/value_padding_unit" android:layout_toEndOf="@+id/light_sleep_hour"/>
                            <TextView android:textSize="24dp" android:textColor="@color/text_black" android:gravity="center" android:id="@+id/light_sleep_minute" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_marginStart="@dimen/value_padding_unit" android:layout_toEndOf="@+id/light_hour_nuit"/>
                            <TextView android:textSize="@dimen/text_size_2" android:textColor="@color/alarm_text_add" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/minute" android:layout_alignBaseline="@+id/light_sleep_minute" android:layout_marginStart="@dimen/value_padding_unit" android:layout_toEndOf="@+id/light_sleep_minute"/>
                        </RelativeLayout>
                        <RelativeLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="1">
                            <ImageView android:id="@+id/light_status_color" android:background="@color/sleep_shallow" android:layout_width="@dimen/padding10" android:layout_height="@dimen/padding10" android:layout_centerVertical="true"/>
                            <TextView android:textSize="@dimen/sleep_text_size_big" android:textColor="@color/alarm_text_add" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sleep_light" android:layout_weight="1" android:layout_centerVertical="true" android:layout_marginStart="@dimen/padding" android:layout_toEndOf="@+id/light_status_color"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                        <RelativeLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                            <TextView android:textSize="24dp" android:textColor="@color/text_black" android:id="@+id/awake_sleep_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"/>
                            <TextView android:textSize="@dimen/text_size_2" android:textColor="@color/alarm_text_add" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fminute" android:layout_alignBaseline="@+id/awake_sleep_count" android:layout_marginStart="@dimen/value_padding_unit" android:layout_toEndOf="@+id/awake_sleep_count"/>
                        </RelativeLayout>
                        <RelativeLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="1">
                            <ImageView android:id="@+id/awake_status_color" android:background="@color/sleep_active" android:layout_width="@dimen/padding10" android:layout_height="@dimen/padding10" android:layout_centerVertical="true"/>
                            <TextView android:textSize="@dimen/sleep_text_size_big" android:textColor="@color/alarm_text_add" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sleep_awake" android:layout_weight="1" android:layout_centerVertical="true" android:layout_marginStart="@dimen/padding" android:layout_toEndOf="@+id/awake_status_color"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/layout_chart" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="15dp">
                <View android:id="@+id/line_gray" android:background="@color/thick_dividing_line" android:layout_width="match_parent" android:layout_height="@dimen/padding10" android:layout_marginTop="@dimen/value20" android:layout_below="@+id/ll_total_distance"/>
                <TextView android:textSize="22dp" android:textColor="@color/text_black" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/value20" android:text="@string/sleep_quality_analysis"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/layout_sleep_description_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/value20" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
                    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/padding">
                        <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_sleep_status_1" android:background="@drawable/icon_sleep_status_1" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:textSize="@dimen/small_value" android:textColor="@color/text_black" android:id="@+id/tv_sleep_status_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sleep_status_1" android:layout_marginStart="@dimen/padding"/>
                    </LinearLayout>
                    <TextView android:textSize="@dimen/sleep_text_size_big" android:textColor="@color/text_gray" android:id="@+id/tv_sleep_description_1" android:scrollbars="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding" android:text="@string/sleep_status_description_1"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/layout_sleep_description_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/value20" android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
                    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/padding">
                        <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_sleep_status_2" android:background="@drawable/icon_sleep_status_2" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:textSize="@dimen/small_value" android:textColor="@color/text_black" android:id="@+id/tv_sleep_status_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sleep_status_2" android:layout_marginStart="@dimen/padding"/>
                    </LinearLayout>
                    <TextView android:textSize="@dimen/sleep_text_size_big" android:textColor="@color/text_gray" android:id="@+id/tv_sleep_description_2" android:scrollbars="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding" android:text="@string/sleep_status_description_2"/>
                </LinearLayout>
                <TextView android:textSize="@dimen/small_value" android:textColor="@color/text_black" android:layout_gravity="center_horizontal" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/sleep_compare"/>
                <View android:background="@color/gray_line" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
                <LinearLayout android:orientation="vertical" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.yc.pedometer.customview.CustomSleepCurveLine android:id="@+id/stepCurveLine" android:layout_width="match_parent" android:layout_height="150dp" android:layout_margin="@dimen/padding10" android:layout_toEndOf="@+id/img_sport" android:layout_alignParentEnd="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
