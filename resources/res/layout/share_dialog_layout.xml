<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/line" android:background="@drawable/botton_radius_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <RelativeLayout android:layout_gravity="bottom" android:layout_width="match_parent" android:layout_height="20dp" android:layout_marginBottom="5dp">
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/viewGroup" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height"/>
        <Button android:textColor="@color/light_black" android:id="@+id/button_cancel" android:background="@drawable/botton_radius_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/cancel"/>
    </LinearLayout>
    <androidx.viewpager.widget.ViewPager android:layout_gravity="center" android:id="@+id/viewPager" android:background="@drawable/top_radius_bg" android:layout_width="match_parent" android:layout_height="180dp" android:layout_above="@+id/line" android:overScrollMode="never"/>
</RelativeLayout>
