                <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true" android:layout_marginStart="@dimen/back_margin_left" android:layout_marginEnd="@dimen/back_margin_left"/>
            </RelativeLayout>
            <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_switch_bracelet_language" android:background="@drawable/selector_other_setting_item" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height">
                <ImageView android:id="@+id/icon_switch_bracelet_language" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_feature_language" android:layout_centerVertical="true" android:layout_marginStart="@dimen/settings_margin_left"/>
                <TextView android:gravity="center_vertical" android:id="@+id/tv_switch_bracelet_language" android:layout_width="wrap_content" android:layout_height="@dimen/setting_item_height" android:text="@string/switch_bracelet_language" android:layout_toEndOf="@+id/icon_switch_bracelet_language" style="@style/settings_item_text"/>
                <ImageView android:id="@+id/bracelet_language_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="@dimen/text_size_2" android:textColor="@color/text_gray" android:gravity="center_vertical" android:id="@+id/bracelet_language" android:layout_width="wrap_content" android:layout_height="@dimen/setting_item_height" android:text="" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/bracelet_language_right"/>
                <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_find_phone" android:background="@drawable/selector_other_setting_item" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height">
                <ImageView android:id="@+id/icon_find_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_find_phone" android:layout_centerVertical="true" android:layout_marginStart="@dimen/settings_margin_left"/>
                <TextView android:gravity="center_vertical" android:id="@+id/find_phone" android:layout_width="wrap_content" android:layout_height="@dimen/setting_item_height" android:text="@string/band_find_phone" android:layout_marginEnd="10dp" android:layout_toEndOf="@+id/icon_find_phone" style="@style/settings_item_text"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
                <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true" android:layout_marginStart="@dimen/back_margin_left" android:layout_marginEnd="@dimen/back_margin_left"/>
            </RelativeLayout>
            <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_horizontal_vertical_screen" android:background="@drawable/selector_other_setting_item" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height">
                <ImageView android:id="@+id/icon_hor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_hor_ver_screen" android:layout_centerVertical="true" android:layout_marginStart="@dimen/settings_margin_left"/>
                <ImageView android:id="@+id/hor_ver_screen_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="@dimen/text_size_2" android:textColor="@color/text_gray" android:gravity="center_vertical" android:id="@+id/tv_screen" android:layout_width="wrap_content" android:layout_height="@dimen/setting_item_height" android:text="@string/horizontal_screen" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/hor_ver_screen_right"/>
                <TextView android:gravity="center_vertical" android:id="@+id/horizontal_vertical" android:layout_width="wrap_content" android:layout_height="@dimen/setting_item_height" android:text="@string/horizontal_vertical_screen" android:layout_toEndOf="@+id/icon_hor" style="@style/settings_item_text"/>
                <View android:id="@+id/view" android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true" android:layout_marginStart="@dimen/back_margin_left" android:layout_marginEnd="@dimen/back_margin_left"/>
