                <TextView android:id="@+id/hr_sleep_assist" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/hr_sleep_assist" android:layout_centerVertical="true" android:layout_toEndOf="@+id/icon_hr_sleep_assist" style="@style/settings_item_text"/>
                <ImageView android:id="@+id/hr_sleep_assist_settings_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="@dimen/text_size_2" android:textColor="@color/text_gray" android:id="@+id/hr_sleep_assist_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/has_close" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/padding" android:layout_toStartOf="@+id/hr_sleep_assist_settings_right"/>
                <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true" android:layout_marginStart="@dimen/settings_margin_left" android:layout_marginEnd="@dimen/settings_margin_left"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
