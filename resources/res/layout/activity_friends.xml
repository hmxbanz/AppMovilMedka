<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/setting_bg_color" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_title" android:background="@color/setting_bg_color" android:layout_width="match_parent" android:layout_height="@dimen/title_item_height">
        <ImageView android:id="@+id/back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_back_white_selector" android:layout_centerVertical="true" android:layout_marginStart="@dimen/back_button_margin_left"/>
        <ImageView android:id="@+id/more_options" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_more_options_selector" android:layout_centerVertical="true" android:layout_marginEnd="10dp" android:layout_alignParentEnd="true"/>
        <ImageView android:id="@+id/friends_settings" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_friends_settings_selector" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/back_margin_left" android:layout_alignParentEnd="true"/>
        <TextView android:textSize="@dimen/tittle_text_size_1" android:textColor="@color/white" android:gravity="center" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/friends_and_relatives" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
        <TextView android:textColor="@color/update_uv_selector" android:id="@+id/tv_done" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/goal_done" android:layout_centerVertical="true" android:layout_marginEnd="10dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <ProgressBar android:id="@+id/webview_progressBar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1.5dp" android:progressDrawable="@drawable/pg" android:layout_below="@+id/rl_title" style="?android:attr/progressBarStyleHorizontal"/>
    <com.yc.pedometer.customview.WebViewScroll android:id="@+id/webview" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/webview_progressBar"/>
    <RelativeLayout android:id="@+id/rl_failed_to_load" android:background="@drawable/not_login_web_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/webview_progressBar">
        <TextView android:textColor="@color/gray" android:gravity="center" android:id="@+id/failed_to_load" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/failed_to_load" android:layout_centerInParent="true" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
        <TextView android:textColor="@color/gray" android:gravity="center" android:id="@+id/loading_failure_cause" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/loading_failure_of_network" android:layout_below="@+id/failed_to_load" android:layout_centerInParent="true" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
        <Button android:textSize="@dimen/text_size_1" android:textColor="@color/setting_bg_color" android:gravity="center" android:id="@+id/studio_button" android:background="@drawable/fail_load_button_selector" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height" android:layout_marginBottom="100dp" android:text="@string/open_network" android:layout_alignParentBottom="true" android:textAllCaps="false" android:layout_marginStart="30dp" android:layout_marginEnd="30dp" style="?android:attr/borderlessButtonStyle"/>
    </RelativeLayout>
</RelativeLayout>
