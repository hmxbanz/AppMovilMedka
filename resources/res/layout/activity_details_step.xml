<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:background="@color/setting_bg_color" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
    <RelativeLayout android:orientation="vertical" android:id="@+id/share_ui_layout" android:background="@color/setting_bg_color" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_title" android:background="@color/setting_bg_color" android:layout_width="match_parent" android:layout_height="@dimen/title_item_height" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
            <ImageView android:id="@+id/back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_back_white_selector" android:layout_centerVertical="true" android:layout_marginStart="@dimen/back_button_margin_left"/>
            <TextView android:textSize="@dimen/tittle_text_size_1" android:textColor="@color/white" android:gravity="center" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/step_count" android:layout_centerInParent="true"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_centerInParent="true" android:layout_alignParentEnd="true">
                <ImageView android:id="@+id/share" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/share_selector" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/back_margin_left"/>
                <ImageView android:id="@+id/showDateDialog" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_calendar_selector" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/back_margin_left"/>
            </LinearLayout>
        </RelativeLayout>
        <com.google.android.material.tabs.TabLayout android:id="@+id/tab" android:background="@drawable/step_tablayout_indicator_bg" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginBottom="3dp" android:layout_below="@+id/rl_title" android:overScrollMode="never" android:layout_marginStart="@dimen/back_margin_left" android:layout_marginEnd="@dimen/back_margin_left" app:tabIndicator="@drawable/tablayout_indicator" app:tabIndicatorColor="@color/white" app:tabIndicatorGravity="1" app:tabIndicatorHeight="25dp" app:tabRippleColor="@color/transparent" app:tabSelectedTextColor="@color/setting_bg_color" app:tabTextAppearance="@style/TextAppearance.Holo.Small" app:tabTextColor="@color/white" app:theme="@style/PcmTextAppearance"/>
        <com.yc.pedometer.fragment.CustomViewPager android:layout_gravity="center" android:id="@+id/vp_statistical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:flipInterval="30" android:layout_below="@+id/tab" android:overScrollMode="never"/>
    </RelativeLayout>
</RelativeLayout>
