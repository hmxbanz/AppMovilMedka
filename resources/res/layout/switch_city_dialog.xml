<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center" android:orientation="vertical" android:id="@+id/rl" android:background="@drawable/body_dialog_bg" android:layout_width="230dp" android:layout_height="wrap_content" android:minHeight="100dp">
        <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/text_black" android:gravity="center" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dialog_margin_topBottom" android:text="@string/tip" android:layout_centerHorizontal="true" android:layout_marginStart="@dimen/dialog_margin_startEnd" android:layout_marginEnd="@dimen/dialog_margin_startEnd"/>
        <TextView android:textSize="@dimen/text_size_2" android:textColor="@color/text_black" android:gravity="start" android:id="@+id/message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dialog_margin_startEnd" android:layout_marginBottom="@dimen/dialog_margin_topBottom" android:layout_below="@+id/title" android:layout_centerInParent="true" android:layout_marginStart="@dimen/dialog_margin_startEnd" android:layout_marginEnd="@dimen/dialog_margin_startEnd"/>
        <View android:id="@+id/line" android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_below="@+id/message"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height" android:layout_below="@+id/line">
            <Button android:textSize="@dimen/text_size_1" android:textColor="@color/text_gray" android:id="@+id/cancel" android:background="@drawable/body_dialog_confirm_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/cancel" android:layout_weight="1" android:textAllCaps="false" style="?android:attr/borderlessButtonStyle"/>
            <View android:layout_gravity="center" android:background="@color/gray_line" android:layout_width="@dimen/line_height" android:layout_height="30dp"/>
            <Button android:textSize="@dimen/text_size_1" android:textColor="@color/setting_bg_color" android:id="@+id/confirm" android:background="@drawable/body_dialog_confirm_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/update_confirm" android:layout_weight="1" android:textAllCaps="false" style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
