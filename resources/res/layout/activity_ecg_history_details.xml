<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/ecg_normal" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
        <include android:id="@+id/rl_title" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/ecg_both_sides"/>
        <androidx.core.widget.NestedScrollView android:id="@+id/mNestedScrollView" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/rl_title" android:overScrollMode="never">
            <LinearLayout android:orientation="vertical" android:background="@color/white" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:textColor="@color/text_black" android:layout_gravity="center" android:id="@+id/tv_calendar_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding10"/>
                <RelativeLayout android:id="@+id/rl_top" android:background="@color/white" android:layout_width="match_parent" android:layout_height="220dp" android:layout_marginTop="@dimen/padding10" android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
                    <com.yc.pedometer.ecg.ECGView android:id="@+id/ecg_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
                    <LinearLayout android:orientation="vertical" android:background="@color/ecg_normal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginStart="5dp">
                        <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/white" android:id="@+id/ecg_who" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2dp" android:text="@string/ECG_Person_Me"/>
                    </LinearLayout>
                    <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/ecg_normal" android:id="@+id/ecg_test_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginEnd="5dp" android:layout_alignParentEnd="true"/>
                    <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/ecg_normal" android:id="@+id/ecg_rate_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:layout_alignParentBottom="true"/>
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_see_detail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true">
                        <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/ecg_normal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ECG_Detail_Check" android:layout_marginEnd="5dp"/>
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:background="@color/ecg_tips_bg" android:layout_width="match_parent" android:layout_height="25dp" android:layout_margin="@dimen/settings_margin_left">
                        <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/text_black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ECG_Tips" android:layout_marginStart="5dp"/>
                    </LinearLayout>
                    <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/text_black" android:id="@+id/tv_body_score_details" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ECG_Tips_Des" android:layout_marginStart="@dimen/settings_margin_left" android:layout_marginEnd="@dimen/settings_margin_left"/>
                    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:background="@color/ecg_tips_bg" android:layout_width="match_parent" android:layout_height="25dp" android:layout_marginTop="@dimen/settings_margin_left" android:layout_marginStart="@dimen/settings_margin_left" android:layout_marginEnd="@dimen/settings_margin_left">
                        <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/text_black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ECG_Body_Status_Des" android:layout_marginStart="5dp"/>
                    </LinearLayout>
                    <Button android:textSize="@dimen/text_size_1" android:textColor="@color/text_black" android:id="@+id/Add_label" android:background="@drawable/ecg_add_label_bg" android:padding="@dimen/padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding" android:minHeight="30dp" android:text="@string/ECG_Tag_Add" android:layout_centerInParent="true" android:textAllCaps="false" android:layout_marginStart="@dimen/settings_margin_left" android:layout_marginEnd="@dimen/settings_margin_left" style="?android:attr/borderlessButtonStyle"/>
                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/caveat_recycle_view" android:background="@color/white" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/settings_margin_left" android:layout_marginBottom="@dimen/settings_margin_left"/>
                    <Button android:textSize="@dimen/text_size_1" android:textColor="@color/white" android:gravity="center" android:id="@+id/bt_ecg_analysis" android:background="@drawable/ecg_analysis_button_selector" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginBottom="20dp" android:text="@string/ecg_analysis" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:textAllCaps="false" android:layout_marginStart="40dp" android:layout_marginEnd="40dp" style="?android:attr/borderlessButtonStyle"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <RelativeLayout android:id="@+id/Body_personal_tip" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="38dp" android:layout_alignParentEnd="true">
            <ImageView android:id="@+id/iv_triangle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/triangle_up" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true"/>
            <TextView android:textSize="12dp" android:textColor="@color/text_gray" android:gravity="center" android:background="@drawable/bg_rectangle_corner_white" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Body_Info_Tips" android:layout_below="@+id/iv_triangle" android:layout_marginEnd="5dp" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
