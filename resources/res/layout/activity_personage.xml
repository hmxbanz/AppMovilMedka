<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="@dimen/title_item_height">
        <ImageView android:id="@+id/personage_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_back_black_selector" android:layout_centerVertical="true" android:layout_marginStart="@dimen/back_button_margin_left"/>
        <TextView android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/personalInfo" style="@style/activity_title_black"/>
    </RelativeLayout>
    <RelativeLayout android:gravity="center_horizontal" android:background="@color/setting_bg_gray" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:id="@+id/rl_head_portrait" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/round_item_style">
                    <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/text_black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/my_head_portrait" android:layout_centerVertical="true" android:layout_marginStart="@dimen/settings_margin_left"/>
                    <com.yc.pedometer.customview.CircleImageView android:id="@+id/personage_head_portrait" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:src="@drawable/head_portrait_default_male" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/round_item_style">
                    <RelativeLayout android:id="@+id/rl_name" android:background="@drawable/selector_other_setting_item" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height">
                        <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/text_black" android:gravity="center_vertical" android:id="@+id/personage_nickname" android:layout_width="wrap_content" android:layout_height="@dimen/setting_item_height" android:text="@string/personage_nickname" android:layout_marginStart="@dimen/settings_margin_left"/>
                        <ImageView android:id="@+id/name_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
                        <TextView android:textColor="@color/text_gray" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/app_name" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/name_right" android:layout_toEndOf="@+id/personage_nickname"/>
                        <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true" android:layout_marginStart="@dimen/settings_margin_left" android:layout_marginEnd="@dimen/settings_margin_left"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/rl_personage_gender" android:background="@drawable/selector_other_setting_item" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height">
                        <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/text_black" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="@dimen/setting_item_height" android:text="@string/personage_gender" android:layout_marginStart="@dimen/settings_margin_left"/>
                        <ImageView android:id="@+id/personage_gender_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
                        <TextView android:textColor="@color/text_gray" android:gravity="center" android:id="@+id/personage_gender" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/personage_gender_male" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/personage_gender_right"/>
                        <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true" android:layout_marginStart="@dimen/settings_margin_left" android:layout_marginEnd="@dimen/settings_margin_left"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/rl_personage_age" android:background="@drawable/selector_other_setting_item" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height">
                        <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/text_black" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="@dimen/setting_item_height" android:text="@string/personage_age" android:layout_marginStart="@dimen/settings_margin_left"/>
                        <ImageView android:id="@+id/personage_age_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
                        <TextView android:textColor="@color/text_gray" android:gravity="center" android:id="@+id/personage_age_value" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/personage_age_right"/>
                        <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true" android:layout_marginStart="@dimen/settings_margin_left" android:layout_marginEnd="@dimen/settings_margin_left"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/rl_personage_height" android:background="@drawable/selector_other_setting_item" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height">
                        <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/text_black" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="@dimen/setting_item_height" android:text="@string/personage_height" android:layout_marginStart="@dimen/settings_margin_left"/>
                        <ImageView android:id="@+id/personage_height_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
                        <TextView android:textColor="@color/text_gray" android:gravity="center" android:id="@+id/personage_height_value" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/personage_height_right"/>
                        <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true" android:layout_marginStart="@dimen/settings_margin_left" android:layout_marginEnd="@dimen/settings_margin_left"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/rl_personage_weight" android:background="@drawable/selector_other_setting_item" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height">
                        <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/text_black" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="@dimen/setting_item_height" android:text="@string/personage_weight" android:layout_marginStart="@dimen/settings_margin_left"/>
                        <ImageView android:id="@+id/personage_weight_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
                        <TextView android:textColor="@color/text_gray" android:gravity="center" android:id="@+id/personage_weight_value" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/personage_weight_right"/>
                        <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/ll_logout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/paddingLeft20">
                    <TextView android:textSize="@dimen/tittle_text_size_1" android:textColor="@color/setting_bg_color" android:layout_gravity="center_horizontal" android:id="@+id/login_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/qq"/>
                    <Button android:textSize="@dimen/tittle_text_size_1" android:textColor="@color/text_black" android:gravity="center" android:id="@+id/logout" android:background="@drawable/unbindled_btn_selector" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height" android:layout_marginTop="5dp" android:text="@string/logout" android:textAllCaps="false" android:layout_marginStart="@dimen/settings_margin_left" android:layout_marginEnd="@dimen/settings_margin_left" style="?android:attr/borderlessButtonStyle"/>
                </LinearLayout>
                <Button android:textSize="18dp" android:textColor="@color/setting_bg_color" android:gravity="center" android:id="@+id/experience_immediately" android:background="@drawable/fillet_button_light_green_selector" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height" android:layout_marginTop="@dimen/setting_item_height" android:layout_marginBottom="30dp" android:text="@string/experience_immediately" android:textAllCaps="false" android:layout_marginStart="@dimen/setting_item_height" android:layout_marginEnd="@dimen/setting_item_height" style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>
