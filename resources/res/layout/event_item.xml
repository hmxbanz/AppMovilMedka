        <CheckBox android:id="@+id/delete_event_status" android:focusable="false" android:focusableInTouchMode="false" android:visibility="visible" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:button="@drawable/delete_alarm_checkbox_selector" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/padding10"/>
