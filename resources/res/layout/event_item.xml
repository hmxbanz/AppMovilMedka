        <LinearLayout android:gravity="start" android:orientation="horizontal" android:id="@+id/ll_event_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding" android:layout_below="@+id/ll_del" android:layout_toEndOf="@+id/delete_event_status">
