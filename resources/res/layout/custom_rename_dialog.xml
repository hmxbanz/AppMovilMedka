            <Button android:textSize="@dimen/text_size_1" android:textColor="@color/setting_bg_color" android:id="@+id/confirm" android:background="@drawable/body_dialog_confirm_bg" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height" android:text="@string/hao" android:layout_weight="1" android:textAllCaps="false" style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
