<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/setting_bg_color" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/setting_bg_gray" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:orientation="horizontal" android:background="@color/setting_bg_color" android:layout_width="match_parent" android:layout_height="@dimen/title_item_height">
            <ImageView android:id="@+id/back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_back_white_selector" android:layout_centerVertical="true" android:layout_marginStart="@dimen/back_button_margin_left"/>
            <TextView android:textSize="@dimen/tittle_text_size_1" android:textColor="@color/white" android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/scan_results"/>
        </RelativeLayout>
        <RelativeLayout android:orientation="horizontal" android:background="@drawable/selector_other_setting_item" android:layout_width="match_parent" android:layout_height="70dp">
            <com.yc.pedometer.customview.CircleImageView android:id="@+id/head_portrait" android:layout_width="55dp" android:layout_height="55dp" android:src="@drawable/head_portrait_default_male" android:layout_centerVertical="true" android:layout_marginStart="15dp"/>
            <TextView android:textSize="@dimen/tittle_text_size_1" android:textColor="@color/black" android:gravity="center" android:id="@+id/nick_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_name" android:layout_centerInParent="true"/>
            <Button android:textSize="@dimen/text_size_1" android:textColor="@color/white" android:gravity="center" android:id="@+id/follow" android:background="@drawable/btn_follow_selector" android:layout_width="wrap_content" android:layout_height="30dp" android:text="@string/follow" android:layout_centerVertical="true" android:textAllCaps="false" android:paddingStart="15dp" android:paddingEnd="15dp" android:layout_marginEnd="15dp" android:layout_alignParentEnd="true" style="?android:attr/borderlessButtonStyle"/>
        </RelativeLayout>
        <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height"/>
    </LinearLayout>
</RelativeLayout>
