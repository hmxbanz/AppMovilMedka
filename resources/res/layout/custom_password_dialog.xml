<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:orientation="vertical" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:id="@+id/rl" android:background="@drawable/bg_custom_card_exception_dialog" android:layout_width="230dp" android:layout_height="120dp">
            <TextView android:textSize="18dp" android:textColor="@color/black" android:gravity="center" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="@string/rename_bracelet" android:layout_centerHorizontal="true"/>
            <View android:id="@+id/line" android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_marginTop="7dp" android:layout_below="@+id/title"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/ll" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginBottom="7dp" android:layout_alignParentBottom="true" android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
                <Button android:textSize="12dp" android:textColor="@color/white" android:id="@+id/cancel" android:background="@drawable/recharge_now_selector" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/cancel" android:layout_weight="1" android:textAllCaps="false" android:layout_marginEnd="2dp"/>
                <Button android:textSize="12dp" android:textColor="@color/white" android:id="@+id/confirm" android:background="@drawable/recharge_now_selector" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/got_it" android:layout_weight="1" android:textAllCaps="false" android:layout_marginStart="2dp"/>
            </LinearLayout>
            <EditText android:textColor="@color/black" android:id="@+id/in_pw" android:background="@null" android:layout_width="match_parent" android:layout_height="40dp" android:singleLine="true" android:layout_above="@+id/ll" android:layout_below="@+id/line" android:layout_centerInParent="true" android:inputType="number" android:paddingStart="10dp"/>
        </RelativeLayout>
    </FrameLayout>
</ScrollView>
