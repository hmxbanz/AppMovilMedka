<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_calander" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rl_title">
        <TextView android:textSize="@dimen/tittle_text_size_1" android:textColor="@color/text_black" android:layout_gravity="center_horizontal" android:id="@+id/calendar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/today"/>
        <TextView android:textSize="14dp" android:textColor="@color/text_gray" android:layout_gravity="center_horizontal" android:id="@+id/today" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/today"/>
    </LinearLayout>
    <androidx.viewpager.widget.ViewPager android:layout_gravity="center" android:id="@+id/vp_day_statistical" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:flipInterval="30"/>
</LinearLayout>
