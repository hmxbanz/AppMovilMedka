<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="20dp" android:textColor="@color/black" android:gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/month" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="2"/>
    <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="2" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
        <TextView android:textSize="@dimen/month_date_textsize" android:textColor="@color/black" android:gravity="center_horizontal" android:id="@+id/first_week" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/month_date_textsize" android:textColor="@color/black" android:gravity="center_horizontal" android:id="@+id/second_week" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/month_date_textsize" android:textColor="@color/black" android:gravity="center_horizontal" android:id="@+id/third_week" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/month_date_textsize" android:textColor="@color/black" android:gravity="center_horizontal" android:id="@+id/fourth_week" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/month_date_textsize" android:textColor="@color/black" android:gravity="center_horizontal" android:id="@+id/fifth_week" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/month_date_textsize" android:textColor="@color/black" android:gravity="center_horizontal" android:id="@+id/sixth_week" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1.3">
        <com.yc.pedometer.customview.MonthStepPanelBar android:id="@+id/month_step_panel_bar" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="2">
        <TextView android:textSize="@dimen/second_page_big_fonts_size" android:textColor="@color/black" android:gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/total_step" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="0" android:layout_weight="1"/>
        <TextView android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/step" android:layout_weight="1"/>
    </LinearLayout>
    <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="2" android:paddingStart="16dp" android:paddingEnd="16dp">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textSize="@dimen/second_page_middle_fonts_size" android:textColor="@color/black" android:gravity="center" android:id="@+id/distance_value" android:layout_width="match_parent" android:layout_height="match_parent" android:text="0" android:layout_weight="1"/>
            <TextView android:textColor="@color/black" android:gravity="center" android:id="@+id/distance_unit" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/kilometers" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textSize="@dimen/second_page_middle_fonts_size" android:textColor="@color/black" android:gravity="center" android:id="@+id/calories_value" android:layout_width="match_parent" android:layout_height="match_parent" android:text="0" android:layout_weight="1"/>
            <TextView android:textColor="@color/black" android:gravity="center" android:id="@+id/calories_unit" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/kilocalorie" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height"/>
</LinearLayout>
