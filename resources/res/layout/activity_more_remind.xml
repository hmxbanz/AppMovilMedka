<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/setting_bg_color" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="@dimen/title_item_height">
        <ImageView android:id="@+id/back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_back_white_selector" android:layout_centerVertical="true" android:layout_marginStart="@dimen/back_button_margin_left"/>
        <TextView android:textSize="@dimen/tittle_text_size_1" android:textColor="@color/white" android:gravity="center" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/select_more_app" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:background="@drawable/no_more_remind_bg" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="15dp" android:textColor="@color/text_black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no_more_remind" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView android:background="@color/setting_bg_gray" android:visibility="gone" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp">
            <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="0.01dp"/>
            <RelativeLayout android:orientation="horizontal" android:id="@+id/settings_do_not_disturb" android:background="@drawable/selector_other_setting_item" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height">
                <ImageView android:id="@+id/icon_do_not_disturb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_do_not_disturb" android:layout_centerVertical="true" android:layout_marginStart="@dimen/settings_margin_left"/>
                <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/text_black" android:gravity="center_vertical" android:id="@+id/do_not_disturb" android:layout_width="wrap_content" android:layout_height="@dimen/setting_item_height" android:text="@string/do_not_disturb" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/icon_do_not_disturb"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
                <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true" android:layout_alignStart="@+id/do_not_disturb"/>
            </RelativeLayout>
            <RelativeLayout android:orientation="horizontal" android:id="@+id/sitting_remind_period" android:background="@drawable/selector_other_setting_item" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height">
                <ImageView android:id="@+id/icon_remind_period" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_remind_period" android:layout_centerVertical="true" android:layout_marginStart="@dimen/settings_margin_left"/>
                <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/text_black" android:gravity="center_vertical" android:id="@+id/remind_period" android:layout_width="wrap_content" android:layout_height="@dimen/setting_item_height" android:text="@string/sitting_remind_period" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/icon_remind_period"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
                <View android:id="@+id/remind_period_line" android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true" android:layout_alignStart="@+id/remind_period"/>
            </RelativeLayout>
            <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_smart_alarm_clock" android:background="@drawable/selector_other_setting_item" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height">
                <ImageView android:id="@+id/icon_alarm" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_alarm" android:layout_centerVertical="true" android:layout_marginStart="@dimen/settings_margin_left"/>
                <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/text_black" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="@dimen/setting_item_height" android:text="@string/smart_alarm_clock" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/icon_alarm"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="0.01dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
