<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:orientation="vertical" android:id="@+id/rlUnlock" android:visibility="gone" android:layout_width="112dp" android:layout_height="112dp" android:layout_centerInParent="true">
        <com.yc.pedometer.sports.widget.LongPressToFinishButton android:id="@+id/customUnLock" android:layout_width="112dp" android:layout_height="112dp" android:layout_centerInParent="true"/>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@drawable/bg_unlock" android:layout_width="100dp" android:layout_height="100dp" android:layout_centerInParent="true">
            <ImageView android:background="@drawable/suo" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="@dimen/text_size_2" android:textColor="@color/text_black" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/rightUnlock"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/llOper" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rlShowMap" android:background="@drawable/bg_white" android:layout_width="48dp" android:layout_height="48dp" android:layout_margin="10dp">
            <ImageView android:id="@+id/ivMap" android:background="@drawable/location_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/llLeft" android:background="@drawable/bg_start" android:visibility="gone" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginStart="8dp">
            <ImageView android:background="@drawable/start" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textColor="@color/white" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/press_to_continue"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/llCenter" android:background="@drawable/bg_start" android:visibility="visible" android:layout_width="100dp" android:layout_height="100dp" android:layout_centerInParent="true" android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
            <ImageView android:background="@drawable/zanting" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/txtRetry" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/pause"/>
        </LinearLayout>
        <RelativeLayout android:gravity="center" android:orientation="vertical" android:id="@+id/rlRight" android:visibility="gone" android:layout_width="92dp" android:layout_height="92dp" android:layout_margin="10dp">
            <com.yc.pedometer.sports.widget.LongPressToFinishButton android:id="@+id/longPress" android:layout_width="92dp" android:layout_height="92dp" android:layout_centerInParent="true"/>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@drawable/bg_end" android:visibility="visible" android:layout_width="80dp" android:layout_height="80dp" android:layout_centerInParent="true">
                <ImageView android:background="@drawable/stop" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textColor="@color/white" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/end_time"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rlLock" android:background="@drawable/bg_white" android:layout_width="48dp" android:layout_height="48dp" android:layout_margin="10dp">
            <ImageView android:background="@drawable/suo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
