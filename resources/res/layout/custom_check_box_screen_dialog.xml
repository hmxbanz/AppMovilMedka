<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:id="@+id/rl" android:background="@drawable/bg_custom_card_exception_dialog" android:layout_width="230dp" android:layout_height="170dp">
        <TextView android:textSize="18dp" android:textColor="@color/text_black" android:gravity="center" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="@string/tip" android:layout_centerHorizontal="true"/>
        <View android:id="@+id/line" android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_marginTop="7dp" android:layout_below="@+id/title"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginBottom="7dp" android:layout_alignParentBottom="true" android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
            <Button android:textSize="12dp" android:textColor="@color/white" android:id="@+id/cancel" android:background="@drawable/recharge_now_selector" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/cancel" android:layout_weight="1" android:textAllCaps="false" android:layout_marginEnd="2dp"/>
            <Button android:textSize="12dp" android:textColor="@color/white" android:id="@+id/confirm" android:background="@drawable/recharge_now_selector" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/confirm" android:layout_weight="1" android:textAllCaps="false" android:layout_marginStart="2dp"/>
        </LinearLayout>
        <ListView android:id="@+id/lock_listxiew" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:listSelector="@drawable/selector_other_setting_item" android:layout_above="@+id/ll" android:layout_below="@+id/line"/>
    </RelativeLayout>
</FrameLayout>
