            <TextView android:textSize="@dimen/tittle_text_size_1" android:textColor="@color/white" android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/ecg_analysis" android:layout_toStartOf="@+id/showDateDialog" android:layout_toEndOf="@+id/back"/>
        </RelativeLayout>
