        <RelativeLayout android:id="@+id/rl_failed_to_load" android:background="@drawable/failed_to_load_web_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/webview_progressBar">
            <TextView android:textColor="@color/gray" android:gravity="center" android:id="@+id/failed_to_load" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/failed_to_load" android:layout_centerInParent="true" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
            <TextView android:textColor="@color/gray" android:gravity="center" android:id="@+id/loading_failure_cause" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/loading_failure_of_network" android:layout_below="@+id/failed_to_load" android:layout_centerInParent="true" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
            <Button android:textSize="@dimen/text_size_1" android:textColor="@color/setting_bg_color" android:gravity="center" android:id="@+id/studio_button" android:background="@drawable/fail_load_button_selector" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height" android:layout_marginBottom="100dp" android:text="@string/open_network" android:layout_alignParentBottom="true" android:textAllCaps="false" android:layout_marginStart="30dp" android:layout_marginEnd="30dp" style="?android:attr/borderlessButtonStyle"/>
        </RelativeLayout>
    </RelativeLayout>
</com.yc.pedometer.customview.VpSwipeRefreshLayout>
