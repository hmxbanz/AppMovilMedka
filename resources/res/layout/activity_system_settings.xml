<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_title" android:layout_width="match_parent" android:layout_height="@dimen/title_item_height">
        <ImageView android:id="@+id/back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_back_black_selector" android:layout_centerVertical="true" android:layout_marginStart="@dimen/back_button_margin_left"/>
        <TextView android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/System_settings" android:layout_centerInParent="true" style="@style/activity_title_black"/>
        <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:background="@color/setting_bg_gray" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/rl_title">
        <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_unit" android:background="@drawable/selector_other_setting_item" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height">
            <TextView android:id="@+id/unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/system_unit" android:layout_centerVertical="true" android:layout_marginStart="@dimen/back_margin_left" style="@style/settings_item_text"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
            <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true" android:layout_marginStart="@dimen/back_margin_left" android:layout_marginEnd="@dimen/back_margin_left"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/feedback" android:background="@drawable/selector_other_setting_item" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/feedback" android:layout_centerVertical="true" android:layout_marginStart="@dimen/back_margin_left" style="@style/settings_item_text"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
            <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true" android:layout_marginStart="@dimen/back_margin_left" android:layout_marginEnd="@dimen/back_margin_left"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_privacy_policy" android:background="@drawable/selector_other_setting_item" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/privacy_policy" android:layout_centerVertical="true" android:layout_marginStart="@dimen/back_margin_left" style="@style/settings_item_text"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
            <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true" android:layout_marginStart="@dimen/back_margin_left" android:layout_marginEnd="@dimen/back_margin_left"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_user_agreement" android:background="@drawable/selector_other_setting_item" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/user_agreement" android:layout_centerVertical="true" android:layout_marginStart="@dimen/back_margin_left" style="@style/settings_item_text"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
            <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <View android:background="@color/thick_dividing_line" android:layout_width="match_parent" android:layout_height="@dimen/thick_dividing_line_height"/>
        <RelativeLayout android:id="@+id/rl_about" android:background="@drawable/selector_other_setting_item" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height">
            <TextView android:id="@+id/tv_about" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/about" android:layout_centerVertical="true" android:layout_marginStart="@dimen/back_margin_left" style="@style/settings_item_text"/>
            <ImageView android:id="@+id/about_settings_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
            <ImageView android:id="@+id/iv_has_new_version_apk" android:background="@drawable/new_pic" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_toStartOf="@+id/about_settings_right"/>
            <TextView android:textSize="@dimen/text_size_2" android:textColor="@color/text_gray" android:id="@+id/app_version" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1.9.2" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/padding" android:layout_toStartOf="@+id/iv_has_new_version_apk"/>
            <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true" android:layout_marginStart="@dimen/settings_margin_left" android:layout_marginEnd="@dimen/settings_margin_left"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/about_update_app" android:background="@drawable/selector_other_setting_item" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/update_app" android:layout_centerVertical="true" android:layout_marginStart="@dimen/back_margin_left" style="@style/settings_item_text"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
            <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true" android:layout_marginStart="@dimen/back_margin_left" android:layout_marginEnd="@dimen/back_margin_left"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/resident_notification" android:background="@drawable/selector_other_setting_item" android:layout_width="match_parent" android:layout_height="@dimen/setting_item_height">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/resident_notification" android:layout_centerVertical="true" android:layout_marginStart="@dimen/back_margin_left" style="@style/settings_item_text"/>
            <ImageView android:id="@+id/settings_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_right" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
            <TextView android:textSize="@dimen/text_size_2" android:textColor="@color/text_gray" android:gravity="center" android:id="@+id/resident_notification_status" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/has_open" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/settings_right"/>
            <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_logout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/setting_item_height" android:layout_alignParentBottom="true">
        <TextView android:textSize="@dimen/tittle_text_size_1" android:textColor="@color/setting_bg_color" android:layout_gravity="center_horizontal" android:id="@+id/login_type" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/qq"/>
        <Button android:textSize="@dimen/tittle_text_size_1" android:textColor="@color/button_text_red" android:gravity="center" android:id="@+id/logout" android:background="@drawable/fillet_button_white_selector" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:minHeight="@dimen/setting_item_height" android:text="@string/logout" android:textAllCaps="false" android:layout_marginStart="@dimen/setting_item_height" android:layout_marginEnd="@dimen/setting_item_height" style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</RelativeLayout>
