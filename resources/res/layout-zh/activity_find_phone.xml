<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/setting_bg_color" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/setting_bg_gray" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:orientation="horizontal" android:background="@color/setting_bg_color" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1.2">
            <RelativeLayout android:orientation="horizontal" android:id="@+id/title" android:background="@color/setting_bg_color" android:layout_width="match_parent" android:layout_height="@dimen/title_item_height">
                <ImageView android:id="@+id/back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_back_white_selector" android:layout_centerVertical="true" android:layout_marginStart="@dimen/back_button_margin_left"/>
                <TextView android:textSize="@dimen/tittle_text_size_1" android:textColor="@color/white" android:gravity="center" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/band_find_phone" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <TextView android:textColor="@color/white" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="@string/call_remind_tip" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
            <ImageView android:layout_gravity="center_horizontal" android:background="@drawable/find_phone_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <View android:background="@color/gray_line" android:visibility="visible" android:layout_width="match_parent" android:layout_height="0.01dp" android:layout_marginTop="20dp"/>
            <RelativeLayout android:gravity="center" android:id="@+id/rl_floating_window_permission" android:background="@drawable/selector_other_setting_item" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="60dp">
                <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/setting_bg_color" android:id="@+id/floating_window_permission" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/notice_permission" android:layout_centerHorizontal="true" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
                <TextView android:textSize="@dimen/small" android:textColor="@color/gray" android:id="@+id/to_accessibility_summary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/notice_permission_summary" android:layout_below="@+id/floating_window_permission" android:layout_centerHorizontal="true" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
            </RelativeLayout>
            <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="0.01dp"/>
            <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_marginTop="20dp"/>
            <RelativeLayout android:orientation="horizontal" android:background="@drawable/selector_other_setting_item" android:layout_width="match_parent" android:layout_height="50dp">
                <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginStart="@dimen/settings_margin_left">
                    <TextView android:textSize="@dimen/text_size_1" android:textColor="@color/text_black" android:gravity="center_vertical" android:id="@+id/tv_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/has_open"/>
                </LinearLayout>
                <CheckBox android:id="@+id/switch_status" android:background="@drawable/switch_on" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/settings_margin_left" android:layout_alignParentEnd="true"/>
                <View android:background="@color/gray_line" android:layout_width="match_parent" android:layout_height="@dimen/line_height" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
